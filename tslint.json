{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "rulesDirectory": [],
    "jsRules": {},
    "rules": {
        "quotemark": [
            true,
            "single",
            "avoid-escape"
        ],
        "only-arrow-functions": [
            false
        ],
        "object-literal-sort-keys": [
            false
        ],
        "arrow-parens": [
            true,
            "ban-single-arg-parens"
        ],
        "space-before-function-paren": [
            "error",
            {
                "anonymous": "alway",
                "named": "never",
                "asyncArrow": "never"
            }
        ],
        "trailing-comma": [
            true,
            {
                "multiline": {
                    "objects": "always",
                    "arrays": "always",
                    "functions": "ignore",
                    "typeLiterals": "always"
                },
                "singleline": {
                    "objects": "never",
                    "arrays": "never",
                    "functions": "never",
                    "typeLiterals": "never"
                }
            }
        ],
        "whitespace": [
            true,
            {
                "check-typecast": false
            }
        ],
        "ordered-imports": [
            true,
            {
                "import-sources-order": "any",
                "named-imports-order": "any"
            }
        ],
        "no-angle-bracket-type-assertion": false,
        "variable-name": [
            true,
            "ban-keywords",
            "check-format",
            "allow-leading-underscore"
        ],
        "max-line-length": [
            true,
            {
                "limit": 120,
                "ignore-pattern": "\\w*['`][^'`]*['`][,;]?"
            }
        ],
        "max-classes-per-file": false,
        "interface-name": [
            true,
            "never-prefix"
        ],
        "member-ordering": [
            true,
            {
                "order": [
                    "public-static-field",
                    "public-instance-field",
                    "private-static-field",
                    "private-instance-field",
                    "public-constructor",
                    "private-constructor",
                    "public-instance-method",
                    "protected-instance-method",
                    "private-instance-method"
                ]
            }
        ],
        "no-console": false,
        "no-unused-expression": [
            false,
            "allow-fast-null-checks",
            "allow-new"
        ],
        "no-var-requires": false
    }
}
